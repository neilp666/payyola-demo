
<div class ="jumbotron">
  <h1>Reward your freelancer</h1>
  <h2>Payyola is a global online recognition platform through </h2>
  <h2> which individuals and organizations can reward their freelance workers</h2>
</div>
  
<div class="center">
  <div class="row">
     <% @listings.each do |listing| %>
       <div class="col-md-3">
          <div class="thumbnail">
           <%= image_tag listing.image.url %>
          <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= listing.price %></p>
              <%= link_to 'Show', listing, class: "btn btn-link" %>
              <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
              <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
              <p><a href="#" class="btn btn-primary" role="button">More Info</a></p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>

<br>

